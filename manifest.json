{
  "manifest_version": 3,
  "name": "Bulldozer",
  "version": "1.0",

  "icons": {
    "16": "./assets/icon/icon16x.png",
    "48": "./assets/icon/icon48x.png",
    "128": "./assets/icon/icon128x.jpeg"
  },

  "background": {
    "service_worker": "main.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["./style.css"]
    }
  ],

  "permissions" : ["background","storage"],

  "action": {
    "default_popup": "index.html"

  }
  
}